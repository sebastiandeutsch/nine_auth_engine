<h2>Sign in</h2>

<% form_for @user_session do |form| %>
	<ul>
	  <li>
	    <%= form.label :email %>
	    <%= form.text_field :email, :class => 'text-field' %>  
	  </li>
	  <li>
	    <%= form.label :password %>
	    <%= form.password_field :password, :class => 'text-field' %>
	  </li>
	  <li>
	    <%= form.check_box :remember_me %>
	    <%= form.label :remember_me %>
	  </li>
	  <li>
	    <%= form.submit "Sign in", :disable_with => "Please wait..." %>
	  </li>
	</ul>
<% end %>

<ul>
  <li>
    <%= link_to "Sign up", new_user_path %>
  </li>
  <li>
    <%= link_to "Forgot password?", new_password_path %>
  </li>
</ul>