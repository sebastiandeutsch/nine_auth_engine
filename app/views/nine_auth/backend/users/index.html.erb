<h2><%= @users.count %> users found</h2>

<table width="100%">
	<tr>
		<td><strong>E-Mail</strong></td>
		<td>
	</tr>
	<% for user in @users %>
	<tr>
		<td><%= user.email %></td>
		<td><%= link_to 'Edit', edit_backend_user_path(user)  %> | <%= link_to 'Delete', [:backend,user], :method => :delete, :confirm => 'Do you really want to delete this user?' %></td>
	</tr>
	<% end %>
</table>

<%= link_to 'Create new user', new_backend_user_path %>