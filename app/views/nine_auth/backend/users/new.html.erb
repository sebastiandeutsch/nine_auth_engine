<h2>Create user</h2>

<% form_for @user, :url => { :controller => 'backend/users' }  do |form| %>
	<div class="errors">
		<%= form.error_messages(:header_message => nil, :message => 'Please correct the following errors and try again:') %>
	</div>
	<ul>
	  <li>
	    <%= form.label :email %>
	    <%= form.text_field :email, :class => 'text-field' %>  
	  </li>
	  <li>
	    <%= form.label :password %>
	    <%= form.password_field :password, :class => 'text-field' %>
	  </li>
	  <li>
	    <%= form.label :password_confirmation %>
	    <%= form.password_field :password_confirmation, :class => 'text-field' %>
	  </li>
		<li>
	    <%= form.label :admin %>
	    <%= form.check_box :admin, :checked => false %>
	  </li>
		<li>
	    <%= form.label :active %>
	    <%= form.check_box :active, :checked => false %>
	  </li>
		<li>
			<label for="send_mail">Send mail with password</label>
			<input name="send_mail" type="hidden" value="0" /><input id="send_mail" name="send_mail" type="checkbox" value="1" />
		</li>
	  <li>
	    <%= form.submit "Create user", :disable_with => "Please wait..." %>
	  </li>
	</ul>
<% end %>
